<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="system">
	
		<image name="background" extra="static">
			<path>${backgroundImage}</path>
		</image>
		
		<video name="videobox" extra="true">
			<pos>0.38 0.555</pos>
			<size>0.24 0.21</size>
			<maxSize>0.25 0.21</maxSize>
			<roundCorners>0.05</roundCorners>
			<visible>true</visible>
			<zIndex>4</zIndex>
		</video>

		<carousel name="systemcarousel">
			<color>FAFAFF00</color>
			<colorEnd>FAFAFF00</colorEnd>
			<systemInfoDelay>700</systemInfoDelay>
			<size>1 0.2325</size>
			<zIndex>3</zIndex>
			<pos>0 0.39</pos>
			<size>1 0.3925</size>
			<origin>0 0</origin>
			<logoPos>-1 0.02</logoPos>
		</carousel>
		
		<image name="logo">
			<reflexion>0.16 0.0</reflexion>
			<reflexionOnFrame>true</reflexionOnFrame>
		</image>
		
		<text name="systemInfo">
			<pos>0 0.66</pos>
			<size>1 0.25</size>
			<backgroundColor>0000FF00</backgroundColor>
			<color>${systemInfoColor}</color>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
			<reflexion>0.20 0.0</reflexion>
		</text>

	</view>
	
</theme>
